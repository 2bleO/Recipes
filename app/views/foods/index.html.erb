<div class="foods d-flex mx-auto p-5 w-75 flex-column align-items-center">
    <div class=" align-self-end">
        <%= link_to new_user_food_path(@user.id) do%>
            <button class="btn btn-primary">Add Food</button>
        <% end %>
    </div>
<table class="table table-striped table-hover table-bordered align-middle table-sm my-5">     
        <thead class="table-dark">

            <th scope="col">Foods</th>
            <th scope="col">Measurement unit</th>
            <th scope="col">Unit price</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            <% @foods.each do |food| %>
              <tr>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td><%= food.price %></td>
              <td class="d-flex justify-content-center">
                  <%= button_to user_food_path(current_user, food), method: :delete, class: "btn btn-danger btn-sm m-1 ps-3 pe-3" do %>
                      </span>Delete</span>
                  <% end %>
              </td>
          </tr>
            <% end %>
        </tbody>
    </table>
</div>
