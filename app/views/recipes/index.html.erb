<section class="flex-column d-flex  w-75 m-auto mt-3">
<div class="align-self-end mx-5 my-3"><%= link_to 'Create a new Recipe', new_user_recipe_path, class: "btn btn-primary btn-sm btn-block my-1" %></div>
<div class="container h-100">

  <div class="columns is-flex-direction-column is-align-items-center">
    <% @recipes.each do |recipe| %>
      <div class="border border-muted d-flex ml-5 p-2 rounded" >
  <div class="columns w-25 p-1">
    <h2 class="p-2">
      <%= link_to recipe.name, user_recipe_path(current_user, recipe), class: "text-primary" %>
    </h2>
    <% if can? :destroy, recipe %>
      
        <%= link_to "Remove", user_recipe_path(current_user, recipe), method: :delete, data: { confirm: "Do you really want to delete this recipe?" }, class: "btn btn-outline-danger btn-sm mt-2 text-decoration-none mx-2" %>
    <% end %>
  </div>
  <div class="w-50 p-4">
    <p class="w-100 "><%= recipe.description %></p>
  </div>
</div>
<br/>
    <% end %>
  </div>
</div>
</section>
